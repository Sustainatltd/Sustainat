    FROM node:18-alpine

    # ğŸ“ Set working directory inside the container
    WORKDIR /app
    
    # ğŸ“¦ Copy package.json and lock file (helps with faster install)
    COPY package*.json ./
    
    # ğŸ“¥ Install all backend dependencies
    RUN npm install
    
    # ğŸ“‚ Copy the rest of your backend files (like server.js, routes/, models/, etc.)
    COPY . .
    
    # ğŸšª Tell Docker to expose this port (our app listens here)
    EXPOSE 5001
    
    # ğŸš€ Start the app (runs server.js using command in package.json)
    CMD ["npm", "start"]
    