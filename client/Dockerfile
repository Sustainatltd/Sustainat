# âœ… First stage: Build React app
FROM node:18-alpine AS builder

# ğŸ“ Set working directory
WORKDIR /app

# ğŸ“¦ Install dependencies
COPY package*.json ./
RUN npm install

# ğŸ“ Copy source code
COPY . .

# ğŸ› ï¸ Build production version of React app
RUN npm run build


# âœ… Second stage: Serve using NGINX
FROM nginx:alpine

# ğŸ§¹ Clean the default NGINX public directory
RUN rm -rf /usr/share/nginx/html/*

# ğŸ“‚ Copy built files from builder stage
COPY --from=builder /app/build /usr/share/nginx/html

# âš™ï¸ Copy custom nginx config to handle React routes
COPY nginx.conf /etc/nginx/conf.d/default.conf

# ğŸšª Expose port 80 for traffic
EXPOSE 80

# ğŸš€ Start NGINX
CMD ["nginx", "-g", "daemon off;"]
